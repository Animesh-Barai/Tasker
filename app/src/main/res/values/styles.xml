<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorWindowBackground</item>
        <item name="android:navigationBarColor">@color/colorNavigationBarColor</item>
        <item name="android:fontFamily">@font/sf_pro_medium</item>
        <item name="android:textColorHint">@color/colorHints</item>
        <item name="otpViewStyle">@style/OtpWidget.OtpView</item>
    </style>

    <style name="OtpWidget.OtpView" parent="Widget.AppCompat.EditText">
        <item name="android:background">@null</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="TimePickerTheme" parent="AppTheme">
        <item name="android:textSize">24sp</item>
    </style>


</resources>
